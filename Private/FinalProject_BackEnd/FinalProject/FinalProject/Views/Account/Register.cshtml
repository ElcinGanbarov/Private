@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<!-- Breadcrumb Area Start Here -->
<div class="breadcrumb-area">
    <div class="container">
        <ol class="breadcrumb breadcrumb-list">
            <li class="breadcrumb-item">
                <a href="index.html">Əsas səhifə</a>
            </li>
            <li class="breadcrumb-item active">Qeydiyyat</li>
        </ol>
    </div>
</div>
<!-- Breadcrumb Area End Here -->

<main id="main-register">
    <!-- Regester Page Start Here -->
    <div class="register-area ptb-80">
        <div class="container">
            <h3 class="login-header">Yeni hesab yarat </h3>
            <div class="row">
                <div class="offset-xl-1 col-xl-10">
                    <div class="register-form login-form clearfix">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="alert-danger mb-3"></div>
                            <div class="form-group row">
                                <label asp-for="Name" class="col-lg-3 col-md-3 col-form-label">Ad</label>
                                <div class="col-lg-6 col-md-6">
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Surname" class="col-lg-3 col-md-3 col-form-label">Soyad</label>
                                <div class="col-lg-6 col-md-6">
                                    <input asp-for="Surname" class="form-control" />
                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Email" class="col-lg-3 col-md-3 col-form-label">Email</label>
                                <div class="col-lg-6 col-md-6">
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Password" class="col-lg-3 col-md-3 col-form-label">Şifrə</label>
                                <div class="col-lg-6 col-md-6">
                                    <input asp-for="Password" id="inputPassword" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <button class="btn show-btn pass" type="button">Göstər</button>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="ConfirmPassword" class="col-lg-3 col-md-3 col-form-label">Təkrar şifrə</label>
                                <div class="col-lg-6 col-md-6">
                                    <input asp-for="ConfirmPassword" id="confirm" class="form-control" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    <button class="btn show-btn confirm" type="button">Göstər</button>
                                </div>
                            </div>

                            <div class="register-box mt-40">
                                <button type="submit" class="login-btn float-right">Qeydiyyat ol</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Register Page End Here -->

</main>
