@model Contact
@{
    ViewData["Title"] = "Index";
}




<!-- Breadcrumb Area Start Here -->
<div class="breadcrumb-area">
    <div class="container">
        <ol class="breadcrumb breadcrumb-list">
            <li class="breadcrumb-item">
                <a href="index.html">Əsas səhifə</a>
            </li>
            <li class="breadcrumb-item active">Bizimlə əlaqə</li>
        </ol>
    </div>
</div>
<!-- Breadcrumb Area End Here -->


<main id="main-contact" style="height: 450px; background-image: url('img/@Model.BackImage');background-size:cover;background-position: center center;background-repeat: no-repeat;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="title-desc">
                    <h3>@Model.Title</h3>
                    <p>
                        @Html.Raw(Model.Description)
                    </p>
                    <div class="mobile-contact mt-5">
                        <span class="fas fa-mobile-alt"> @Model.MobilePhone</span>
                    </div>
                    <div class="phone-contact">
                        <span class="fas fa-phone">@Model.HomePhone</span>
                    </div>
                    <div class="email-contact">
                        <span class="fas fa-envelope"> @Model.Email</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>