@model Contact
@{
    ViewData["Title"] = "Detail";
}

<div class="content-body">
    <div class="row">
        <div class="col-12">
            <span class="text-info">Başlıq</span>
            <p>@Model.Title</p>
            <span class="text-info">Ətraflı məumat</span>
            <p>@Html.Raw(Model.Description)</p>
            <span class="text-info">Mobil telefon</span>
            <p>@Html.Raw(Model.MobilePhone)</p>
            <span class="text-info">Ev telefonu</span>
            <p>@Html.Raw(Model.HomePhone)</p>
            <span class="text-info">Elektron poct unvanı</span>
            <p>@Html.Raw(Model.Email)</p>

            <img src="~/img/@Model.BackImage" style="width:300px" />
            <div class="row mt-15">
                <div class="col-12">
                    <a asp-action="Index" class="btn btn-outline-info"><span class="fa fa-arrow-left"></span></a>
                </div>
            </div>
        </div>
      
    </div>
</div>

