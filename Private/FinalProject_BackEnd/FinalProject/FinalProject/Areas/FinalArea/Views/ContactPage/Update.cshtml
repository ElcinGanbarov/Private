@model Contact
@{
    ViewData["Title"] = "Update";
}



<div class="content-body">
    <!--Form State Start-->
    <div class="col-12 mb-30">
        <div class="row mbn-15">
            <div class="col-lg-12 mb-15">
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Title">Title:</label>
                        <input asp-for="Title" class="form-control primary" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-15">
                        <label asp-for="MobilePhone">Mobile phone:</label>
                        <input asp-for="MobilePhone" class="form-control primary" />
                        <span asp-validation-for="MobilePhone" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-15">
                        <label asp-for="HomePhone">Home phone:</label>
                        <input asp-for="HomePhone" class="form-control primary" />
                        <span asp-validation-for="HomePhone" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-15">
                        <label asp-for="Email">Email:</label>
                        <input asp-for="Email" class="form-control primary" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-15">
                        <label asp-for="Description">Haqqında:</label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="mt-20">
                        <img src="~/img/@Model.BackImage" style="width:200px" />
                    </div>
                    <div class="form-group mt-15">
                        <label asp-for="UpdatePhoto">Image:</label>
                        <input asp-for="UpdatePhoto" accept="image\*" style="width:300px" /><br>
                        <span asp-validation-for="UpdatePhoto" class="text-danger"></span>
                    </div>
                    <div class="mt-25">
                        <input type="submit" class="btn btn-outline-primary" value="Update"/>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
<!--Form State End-->

<script src="https://cdn.ckeditor.com/ckeditor5/12.4.0/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.querySelector('#Description'))
        .catch(error => {
            console.error(error);
        });
</script>

