
@model IEnumerable<Brand>
@{
    ViewData["Title"] = "Index";
}

<!-- Content Body Start -->
<div class="content-body" style="overflow-x:hidden;">

    <!-- Page Headings Start -->
    <div class="row justify-content-between align-items-center mb-10">

        <!-- Page Heading Start -->
        <div class="col-12 col-lg-auto mb-20">
            <div class="page-heading">
                <div class="box-head">
                    <a asp-action="Create" class="button button-outline button-primary"><span>Create</span></a>
                </div>
            </div>
        </div><!-- Page Heading End -->

    </div><!-- Page Headings End -->

    <div class="row">

        <!--Default Data Table Start-->
        <div class="col-12 mb-30">
            <div class="box">
                <div class="box-head">
                    <h3 class="title">Default Table</h3>
                </div>
                <div class="box-body" style="width:1000px;">

                    <table class="table table-bordered data-table data-table-default">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Details</th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int count = 1;
                            }
                            @foreach (var brand in Model)
                            {
                                <tr>
                                    <th>@count</th>
                                    <td>@brand.Name</td>
                                    <td>
                                        @if (brand.Details.Length > 50)
                                        {
                                            @Html.Raw(brand.Details.Substring(0, 30) + "...")
                                        }
                                        else
                                        {
                                            @Html.Raw(brand.Details)
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Detail" asp-route-id="@brand.Id" class="button button-outline button-success"><span class="fa fa-info"></span></a>
                                        <a asp-action="Update" asp-route-id="@brand.Id" class="button button-outline button-warning"><span class="fa fa-edit"></span></a>
                                        <a asp-action="Delete" asp-route-id="@brand.Id" class="button button-outline button-danger"><span class="fa fa-trash"></span></a>
                                    </td>

                                </tr>
                                count++;
                            }


                        </tbody>

                    </table>

                </div>
            </div>
        </div>
        <!--Default Data Table End-->



    </div>

</div><!-- Content Body End -->
