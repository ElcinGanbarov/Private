
@model ProductModel
@{
    ViewData["Title"] = "Detail";
}

<div class="content-body">
    <div class="row">
        <div class="col-12">
            <span class="text-info">Name:</span>
            <p>@Model.Product.Name</p>
            <span class="text-info">Details:</span>
            <p>@Model.Product.Details</p>
            <span class="text-info">Price:</span>
            <p>@((Model.Product.Price)+" "+"₼")</p>
            <span class="text-info">Discount:</span>
            <p>@((Model.Product.Discount)+" "+"%")</p>
            <span class="text-info">Count:</span>
            <p>@Model.Product.Count</p>
            <span class="text-info">Date:</span>
            <p>@Model.Product.CreateDate</p>

            <div class="col-lg-6 col-12 mb-30">
                <span class="text-info">Category:</span>
                <p>@Model.Product.BrandCategory.Brand.Name</p>
            </div>
            <div class="col-lg-6 col-12 mb-30">
                <span class="text-info">Brand:</span>
                <p>@Model.Product.BrandCategory.Categorie.Name</p>
            </div>

            @foreach (var item in Model.ProductImages.Where(i => i.ProductId == i.Product.Id))
            {

                <img src="~/img/@item.ImageUrl" style="width:200px" />
            }
            <div class="row mt-15">
                <div class="col-12">
                    <a asp-action="Index" class="btn btn-outline-info"><span class="fa fa-arrow-left"></span></a>
                </div>
            </div>
        </div>
    </div>
</div>

