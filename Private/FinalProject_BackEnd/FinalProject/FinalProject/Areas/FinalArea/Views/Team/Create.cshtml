@model TeamEmployee

@{
    ViewData["Title"] = "Create";
}

<div class="content-body">
    <!--Form State Start-->
    <div class="col-12 mb-30">
        <div class="row mbn-15">
            <div class="col-lg-12 mb-15">
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Name">Name:</label>
                        <input asp-for="Name" class="form-control primary" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-15">
                        <label asp-for="Surname">Surname:</label>
                        <input asp-for="Surname" class="form-control primary" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-15">
                        <label asp-for="Description">Description:</label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-15">
                        <label asp-for="Position">Position:</label>
                        <input asp-for="Position" class="form-control primary" />
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-15">
                        <label asp-for="Photo">Image:</label>
                        <input asp-for="Photo" accept="image\*" style="width:300px" /><br>
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                    <div class="mt-25">
                        <input type="submit" class="btn btn-outline-primary" value="Create" />
                    </div>
                </form>
                <div class="row mt-15">
                    <div class="col-12">
                        <a asp-action="Index" class="btn btn-outline-info"><span class="fa fa-arrow-left"></span></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--Form State End-->

<script src="https://cdn.ckeditor.com/ckeditor5/12.4.0/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.querySelector('#Description'))
        .catch(error => {
            console.error(error);
        });
</script>


