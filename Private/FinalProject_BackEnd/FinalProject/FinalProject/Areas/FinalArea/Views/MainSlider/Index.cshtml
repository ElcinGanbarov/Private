@model IEnumerable<HomeSlider>
@{
    ViewData["Title"] = "Index";
}

<!--Responsive Table Start-->
<div class="content-body">
    <div class="row">
        <div class="col-12 mb-30">
            <div class="box">
                <div class="box-head">
                    <a asp-action="Create" class="button button-outline button-primary"><span>Create</span></a>
                </div>
                <div class="box-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Image</th>
                                    <th>Description</th>
                                    <th>Title-Down</th>
                                    <th>Title_Up</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int count = 1;
                                }
                                @foreach (var slider in Model)
                                {
                                    <tr>
                                        <th>@count</th>
                                        <td>
                                            <img src="~/img/@slider.Image"  style="width:150px" />
                                        </td>
                                        <td>
                                        @if (slider.Description.Length > 50)
                                        {
                                            @Html.Raw(slider.Description.Substring(0,30)+"...")
                                        }
                                        else
                                        {
                                            @Html.Raw(slider.Description)
                                        }
                                        </td>
                                        <td>
                                            @if (slider.TitleDown.Length > 30)
                                            {
                                                @(slider.TitleDown.Substring(0, 20) + "...")
                                            }
                                            else
                                            {
                                                @slider.TitleDown
                                            }
                                           
                                        </td>
                                        <td>
                                            @if (slider.TitleUp.Length > 30)
                                            {
                                                @(slider.TitleUp.Substring(0, 20) + "...")
                                            }
                                            else
                                            {
                                                @slider.TitleUp
                                            }
                                        </td>
                                        <td>

                                            <a asp-action="Detail" asp-route-id="@slider.Id" class="button button-outline button-success"><span class="fa fa-info"></span></a>
                                            <a asp-action="Update" asp-route-id="@slider.Id" class="button button-outline button-warning"><span class="fa fa-edit"></span></a>
                                            <a asp-action="Delete" asp-route-id="@slider.Id" class="button button-outline button-danger"><span class="fa fa-trash"></span></a>
                

                                        </td>

                                    </tr>
                                    count++;
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

    <!--Responsive Table End-->
