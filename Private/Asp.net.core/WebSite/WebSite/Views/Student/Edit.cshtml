@model Student
@{
    ViewData["Title"] = "Create";
}

<h1>Telebe Yenile</h1>

<a asp-action="index" class="btn btn-outline-primary">Geri</a>

<form class="mt-3" method="post">
    <input asp-for="Id" type="hidden" />
    <div class="form-group">
        <label asp-for="Name">Ad</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Surname">Soyad</label>
        <input asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="GroupId">Group</label>
        <select asp-for="GroupId" class="form-control" asp-items="@ViewBag.Group"></select>
        <span asp-validation-for="GroupId" class="text-danger"></span>

    </div>
    <button type="submit" class=" btn btn-outline-primary">Telebe Yenile</button>
</form>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

