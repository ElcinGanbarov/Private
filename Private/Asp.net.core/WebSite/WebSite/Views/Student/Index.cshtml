@model IEnumerable<Student>
@{
    ViewData["Title"] = "Index";
}

<h1>Telebeler</h1>
<a asp-action="create" class="btn btn-outline-primary">Yeni telebe</a>
<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Qrup</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.Group.Name</td>
            <td>
                <a asp-action="edit" asp-route-id="@item.Id" class="mx-4">
                    <i class="fas fa-edit"></i>
                </a>
                <a asp-action="delete" asp-route-id="@item.Id" class="text-danger">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>

